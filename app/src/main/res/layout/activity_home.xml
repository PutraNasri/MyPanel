<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.byonge.mypanel.Home"
    android:background="#ffffff">

    <TextView
        android:text="RADIASI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="VOLTAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="CURENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="HUMIDITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="SUHU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:textSize="24sp" />

    <TextView
        android:text="PANEL MONITORING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:textSize="30sp" />

    <TextView
        android:text="30 C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/textView14"
        android:id="@+id/suhu"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="40 %"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suhu"
        android:layout_alignEnd="@+id/suhu"
        android:id="@+id/radiasi"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="5 V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiasi"
        android:layout_alignEnd="@+id/radiasi"
        android:id="@+id/volt"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="2 A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volt"
        android:layout_alignEnd="@+id/volt"
        android:id="@+id/ampere"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="80 %"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ampere"
        android:layout_alignEnd="@+id/ampere"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="WAKTU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="12.03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waktu"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="history"
        android:id="@+id/button4"
        android:textSize="5sp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/waktu"
        android:layout_alignEnd="@+id/waktu" />

</RelativeLayout>
